			"onpopstate",
			"onplaying",
			"oncontextlost",
			"onloadstart",
			"onseeking",
			"oninput",
			"onmessageerror",
			"onselectstart",
			"onmousewheel",
			"ononline",
			"exports",
			"onpush",
			"onconnect",
			"onpushsubscriptionchange",
			"onnotificationclose",
			"oninstall",
			"onfetch",
			"onsync",
			"onnotificationclick"
		]
	}
}
